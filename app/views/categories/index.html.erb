<h1>Categories</h1>

<table>
    <thead>
        <tr>
            <th>Name </th>
         </tr>
    </thead>
    <tbody>
        <% @categories.each do |category|%>
            <tr>    
                <td><%=link_to category.name, category_path(category)%></td>
            </tr>
        <%end%>
    </tbody>
</table>    
<%= will_paginate @categories %>
